<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.firebase.shoppinglistplusplus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name=".ShoppingListApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_shopping_list"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.TrainerMainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.TrainerMainActivity" />
        </activity>
        <activity
            android:name=".ui.ClientMainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.udacity.firebase.shoppinglistplusplus.ui.ClientMainActivity" />
        </activity>
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.CreateAccountActivity"
            android:label="@string/title_activity_create_account"
            android:parentActivityName=".ui.login.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.login.LoginActivity" />
        </activity>

        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/action_settings" />

        <activity android:name=".ui.sharing.ClientList" />
        <activity android:name=".ui.sharing.AddTrainerActivity" />
        <activity android:name=".ui.activeWorkout.TrainerWorkoutActivity" />
        <activity android:name=".ui.activeWorkout.ClientWorkoutActivity" />
        <activity android:name=".ui.activeMeasurement.TrainerMeasurementActivity" />
        <activity android:name=".ui.activeMeasurement.ClientMeasurementActivity" />
        <activity android:name=".ui.activeMeals.TrainerDietlistActivity" />
        <activity android:name=".ui.activeMeals.ClientMealActivity" />
        <activity android:name=".ui.activeWorkoutDetails.ActiveWorkoutDetailsActivity" />
        <activity android:name=".ui.activeMeasurementDetails.ActiveMeasurementDetailsActivity" />
        <activity android:name=".ui.activeMealDetails.ActiveMealDetailsActivity" />
    </application>

</manifest>
