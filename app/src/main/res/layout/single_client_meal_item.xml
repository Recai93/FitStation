<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="6">

    <ImageView
        android:id="@+id/image_meal_ic"
        android:layout_width="0dp"
        android:layout_height="@dimen/lists_row_height"
        android:layout_weight="1"
        android:padding="8dp"
        android:src="@drawable/ic_lunch"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_meal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_meal_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="@dimen/list_created_by_text_size" />

        <TextView
            android:id="@+id/tv_meal_calorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textSize="@dimen/list_created_by_text_size" />
    </LinearLayout>

</LinearLayout>